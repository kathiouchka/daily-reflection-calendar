// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Updated User model to support Nextâ€‘Auth with string id
model User {
  id            String          @id @default(cuid())
  name          String?         // Optional: for profile info (can be null)
  email         String          @unique
  emailVerified DateTime?       // Optional: store email verification date
  image         String?         // Optional: store profile image URL
  createdAt     DateTime        @default(now())
  responses     UserResponse[]
  accounts      Account[]       // Relation to OAuth accounts
  sessions      Session[]       // Relation to sessions
  
}

model Account {
  id                 String   @id @default(cuid())
  userId             String   // Changed from Int to String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   // Changed from Int to String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Your existing models remain unchanged

model Phrase {
  id        Int            @id @default(autoincrement())
  text      String
  date      DateTime
  language  String
  responses UserResponse[]
}

model UserResponse {
  id           Int      @id @default(autoincrement())
  userId       String   // Changed from Int to String
  phraseId     Int
  responseText String
  createdAt    DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  phrase Phrase @relation(fields: [phraseId], references: [id])
}
